{
    "compilerOptions": {
      "target": "ESNext",
      "module": "ESNext",
      "moduleResolution": "Node",
      "allowJs": true,
      "checkJs": false,
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "allowImportingTsExtensions": true,
      "outDir": "./dist",
      "rootDir": "./"
    },
    "include": ["./**/*.ts"],
    "exclude": ["node_modules", "dist"]
  }